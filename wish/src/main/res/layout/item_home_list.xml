<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp10"
    android:paddingEnd="@dimen/dp10"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp70"
       android:orientation="horizontal"
       >
       <com.chs.core.widget.CircleImageView
           android:id="@+id/iv_author"
           android:layout_width="@dimen/dp60"
           android:layout_height="@dimen/dp60"
           android:src="@mipmap/head"
           />
       <LinearLayout
           android:id="@+id/ll_msg"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginStart="@dimen/dp10"
           android:layout_toEndOf="@id/iv_author"
           android:layout_centerVertical="true"
           >
           <android.support.v7.widget.AppCompatTextView
               android:id="@+id/tv_author"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="果子熟了"
               />
           <android.support.v7.widget.AppCompatTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1小时前"
               />
       </LinearLayout>

   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp5"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啊啊发大发阿发大发"
            android:textSize="@dimen/sp16"
            android:textColor="@color/black"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="已完成"
            />
    </LinearLayout>

<android.support.v7.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:paddingRight="@dimen/dp5"
    android:paddingLeft="@dimen/dp5"
    android:ellipsize="end"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginBottom="@dimen/dp5"
    android:text="发发发大道附近啊击破嗯嗯啊发发发大道附近啊击破嗯嗯啊发发发大道附近啊击破嗯嗯啊发发发大道附近啊击破嗯嗯啊"
    />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp10"
    android:paddingBottom="@dimen/dp10"
    >
    <android.support.v7.widget.AppCompatTextView
        android:layout_toRightOf="@id/ll_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp5"
        >
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_list_tab_bg"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5"
        android:text="寻人"
        />
    </LinearLayout>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/detail_play_music"
        android:text="最近还好吗"
        android:layout_marginRight="@dimen/dp5"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/line_bg"
        />

<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp10"
    android:paddingTop="@dimen/dp10"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        >
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp1"
        android:layout_height="match_parent"
        android:background="@color/line_bg"
        />
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:gravity="center"
       >
       <android.support.v7.widget.AppCompatTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:drawablePadding="@dimen/dp10"
           android:drawableLeft="@mipmap/main_home_list_comment"
           android:text="评论"
           />
   </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.LinearLayoutCompat>