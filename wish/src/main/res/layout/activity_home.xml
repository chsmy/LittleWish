<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

            <com.chs.core.widget.ChangeColorIconWithText
                android:id="@+id/id_indicator_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp"
                hyman:mycolor="@color/black"
                hyman:myicon="@mipmap/main_home_selected"
                hyman:text="@string/main_home_text"
                hyman:text_size="12sp"/>
         <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            />

            <com.chs.core.widget.ChangeColorIconWithText
                android:id="@+id/id_indicator_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="6dp"
                hyman:mycolor="@color/black"
                hyman:myicon="@mipmap/main_mine_un_select"
                hyman:text="@string/main_mine_text"
                hyman:text_size="12sp"/>

    </LinearLayout>
</LinearLayout>